<odoo>
    <record id="purchase_inventory_tree_view" model="ir.ui.view">
        <field name="name">Phiếu nhập kho</field>
        <field name="model">purchase.inventory</field>
        <field name="arch" type="xml">
            <tree create="false" default_order="date desc">
                <field name="name"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="purchase_inventory_form_view" model="ir.ui.view">
        <field name="name">Phiếu nhập kho</field>
        <field name="model">purchase.inventory</field>
        <field name="arch" type="xml">
            <form create="false">
                <field name="day_of_week" invisible="1"/>
                <field name="state" invisible="1"/>
                <div class="d-flex">
                    <label for="date" string="Ngày" attrs="{'readonly': [('state', '=', 'done')]}"/>
                    <field name="date" readonly="1" nolabel="1" attrs="{'readonly': [('state', '=', 'done')]}"/>
                </div>
                <group string="Thông tin phiếu nhập">
                    <field name="lines" attrs="{'readonly': [('state', '=', 'done')]}" nolabel="1">
                        <tree editable="bottom" create="false" delete="false">
                            <field name="province_id" force_save="1"/>
                            <field name="in_company"/>
                            <field name="in_province"/>
                            <field name="total" sum="Tổng" force_save="1"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="purchase_inventory_province_tree_view" model="ir.ui.view">
        <field name="name">Nhà Đài</field>
        <field name="model">province.lottery</field>
        <field name="arch" type="xml">
            <tree create="false" editable="bottom">
                <field name="code"/>
                <field name="name"/>
                <field name="group"/>
            </tree>
        </field>
    </record>

    <record id="purchase_inventory_province_action_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Nhà đài</field>
        <field name="res_model">province.lottery</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="purchase_inventory_action_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Nhập kho</field>
        <field name="res_model">purchase.inventory</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="create_purchase_inventory_action_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Tạo phiếu nhập kho</field>
        <field name="res_model">purchase.inventory.wz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="purchase_inventory_menu_view"
              name="Nhập kho"
              groups="group_nha_kho"
              sequence="3"
              web_icon="lottery,static/src/img/icons/Purchase.png"
              action="purchase_inventory_action_view"/>

    <menuitem id="create_purchase_inventory_menu_view"
              name="Tạo phiếu nhập" parent="purchase_inventory_menu_view"
              action="create_purchase_inventory_action_view"/>

    <menuitem id="purchase_inventory_province_menu_view"
              name="Nhà đài" parent="purchase_inventory_menu_view"
              action="purchase_inventory_province_action_view"/>
</odoo>