<odoo>
    <data>
        <record id="schedule_update_state_lottery_everydays" model="ir.cron">
            <field name="name">Schedule update state lottery : Every Days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=0)).strftime('%Y-%m-%d 16:59:59')"/>
            <field name="model_id" ref="lottery.model_planed"/>
            <field name="state">code</field>
            <field name="code">model.update_state_lottery()</field>
        </record>
    </data>
</odoo>