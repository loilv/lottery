<odoo>
    <record id="purchase_inventory_tree_view" model="ir.ui.view">
        <field name="name">Phiếu nhập kho</field>
        <field name="model">purchase.inventory</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="purchase_inventory_form_view" model="ir.ui.view">
        <field name="name">Phiếu nhập kho</field>
        <field name="model">purchase.inventory</field>
        <field name="arch" type="xml">
            <form create="false">
                <field name="day_of_week" invisible="1"/>
                <div class="d-flex">
                    <label for="date" string="Ngày"/>
                    <field name="date" readonly="1" nolabel="1"/>
                </div>
                <notebook>
                    <page string="Chi tiết">
                        <field name="lines">
                            <tree editable="bottom" create="false" delete="false">
                                <field name="province_id" force_save="1"/>
                                <field name="in_company"/>
                                <field name="in_province"/>
                                <field name="total" sum="Tổng" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="purchase_inventory_action_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Nhập kho</field>
        <field name="res_model">purchase.inventory</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="create_purchase_inventory_action_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Tạo phiếu nhập kho</field>
        <field name="res_model">purchase.inventory.wz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="purchase_inventory_menu_view"
              name="Nhập kho"
              web_icon="lottery,static/src/img/icons_green/purchase.png"
              action="purchase_inventory_action_view"/>

    <menuitem id="create_purchase_inventory_menu_view"
              name="Tạo phiếu nhập" parent="purchase_inventory_menu_view"
              action="create_purchase_inventory_action_view"/>
</odoo>